<% title "Comments" %>

<table>
  <tr>
    <th>Body</th>
  </tr>
  <% @comments.try(:each) do |comment| %>
    <tr>
      <td><%= comment.body %></td>
      <td><%= link_to "Show", post_comment_path(comment.post_id, comment.id) %></td>
      <td><%#= link_to "Edit", edit_post_comment_path(comment) %></td>
      <td><%#= link_to "Destroy", post_comment_path, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Comment", new_post_comment_path %></p>
